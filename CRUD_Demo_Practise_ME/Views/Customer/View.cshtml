@using System.Data
<style>
    /* Table styling */
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #ddd;
    }

    /* Column-specific styling */
    .product-id {
        width: 10%;
    }

    .product-name {
        width: 25%;
    }

    .product-price {
        width: 15%;
    }

    .product-code {
        width: 15%;
    }

    .description {
        width: 25%;
    }

    .user-id {
        width: 10%;
    }
</style>
<h2>Customer List</h2>
<a asp-action="AddOrEdit" class="btn btn-primary mb-3">Add New</a>
<div>
    <table>
        <thead>
            <tr>
                <th>Customer Id</th>
                <th>Customer Name</th>
                <th>Product Name</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach (DataRow dataRow in Model.Rows)
            {
                <tr>
                    <td>@dataRow["CustomerId"]</td>
                    <td>@dataRow["CustomerName"]</td>
                    <td>@dataRow["Name"]</td>
                    <td>
                        <a asp-action="AddOrEdit" asp-route-id="@dataRow["CustomerId"]" class="btn btn-warning btn-sm">Edit</a>
                        
                        <button class="btn btn-danger m-1" onclick="confirmDelete('@dataRow["CustomerId"]')">DELETE</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    function confirmDelete(id) {
        if (confirm("Are you sure you want to delete this customer?")) {
            window.location.href = '/Customer/Delete?id=' + id;
        }
    }
</script>
